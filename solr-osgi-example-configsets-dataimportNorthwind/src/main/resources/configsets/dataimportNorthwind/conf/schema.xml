   <field name="_root_" type="string" indexed="true" stored="false"/>
   <field name="id" type="string" indexed="true" stored="true" required="true" multiValued="false" />
   <field name="cjsz" type="string" indexed="true" stored="true" />
   <field name="cegnev" type="string" indexed="true" stored="true" />
   <field name="cegnev_prefix_ngrams" type="edge_ngram" stored="true" indexed="true" termVectors="true" termPositions="true" termOffsets="true"/>
   <field name="cegnev_postfix_ngrams" type="edge_ngram_reverse" stored="true" indexed="true" termVectors="true" termPositions="true" termOffsets="true"/>
   <field name="cegnev_exact_ngrams" type="exact_ngram" stored="true" indexed="true" termVectors="true" termPositions="true" termOffsets="true"/>

